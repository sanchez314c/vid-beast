# VidBeast Environment Configuration
# Copy this file to .env and customize for your environment

# Application Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Electron Settings
ELECTRON_ENABLE_LOGGING=true
ELECTRON_DEVTOOLS=true

# Video Processing Settings
FFMPEG_BINARY_PATH=
VIDEO_PROCESSING_THREADS=4
MAX_FILE_SIZE_MB=1000

# Performance Settings
MEMORY_LIMIT_MB=2048
PROCESSING_TIMEOUT_SECONDS=300

# Development Settings
AUTO_RELOAD=true
OPEN_DEVTOOLS_ON_START=false

# File Paths (customize for your system)
# DEFAULT_VIDEO_DIRECTORY=
# OUTPUT_DIRECTORY=
# TEMP_DIRECTORY=

# Optional: Logging
LOG_FILE_PATH=logs/vidbeast.log
LOG_ROTATION=daily
LOG_MAX_FILES=7